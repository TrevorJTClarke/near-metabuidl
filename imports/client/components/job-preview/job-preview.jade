template(name="jobPreview")
  .well.job-preview.row
    .col.colspan-3
      h3.h4
        if company.id
          img.inline-project-picture(src="https://avatars.githubusercontent.com/u/#{company.id}")
        | #{title}
      .text-muted.sub-header
        if compare issue.state '===' 'closed'
          b.text-danger CLOSED
          |  &middot; 
        b {{getFirst category}}
        if location.country
          | &middot; #{location.country}
          if location.city
            |, #{location.city}
        | &middot; {{getFirst availability}}
        if isRemote
          | &middot; 
          b Remote
    .col
      if compare currentUser._id '===' owner
        a.btn.btn-black(href="{{pathFor 'job' number=issue.number}}") View
        span &nbsp;
        a.btn.btn-primary(href="{{pathFor 'editjob' number=issue.number}}") Edit
      else
        a.btn.btn-success(href="{{pathFor 'job' number=issue.number}}") Apply